<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Initialization for data source -->
	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost/high-school" />
		<property name="username" value="root" />
		<property name="password" value="greiscol" />
	</bean>

	<!-- Definition for studentJDBCTemplate bean -->
	<bean id="studentJDBCTemplate" class="students.StudentJDBCTemplate">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<!-- Definition for teacherJDBCTemplate bean -->
	<bean id="teacherJDBCTemplate" class="teachers.TeacherJDBCTemplate">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<!-- Definition for courceJDBCTemplate bean -->
	<bean id="courseJDBCTemplate" class="courses.CourseJDBCTemplate">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<!-- Definition for studentAssistCourseTemplate bean -->
	<bean id="studentAssistCourseTemplate" class="studentAssistCourse.StudentAssistCourseTemplate">
		<property name="dataSource" ref="dataSource" />
	</bean>

</beans>
